{
    "type": "object",
    "options": {},
    "properties": {
        "host": {
            "title": "Platform",
            "type": "string",
            "format": "select",
            "default": "youtube",
            "options": {
                "enum_titles": ["YouTube", "Vimeo"]
            },
            "enum": ["youtube", "vimeo"]
        },
        "id": {
            "title": "Video ID",
            "type": "string"
        },
        "hostdata": {
            "title": "API oembed data",
            "type": "boolean",
            "format": "checkbox",
            "description": "If this is turned on, next save will fetch video data (title, description, etc.)",
            "default": false
        },
        "hostdata_json": {
            "options": {
                "hidden": true
            },
            "type": "string"
        },
        "advanced_settings": {
            "title": "Advanced settings",
            "type": "boolean",
            "format": "checkbox",
            "default": false
        },
        "settings": {
            "type": "object",
            "options": {
                "containerAttributes": {
                    "class": "as-none-object"
                },
                "dependencies": {
                    "advanced_settings": true
                }
            },
            "properties": {
                "autoplay": {
                    "title": "Autoplay",
                    "type": "boolean",
                    "description": "Specifies whether the initial video will automatically start to play when the player loads.",
                    "format": "checkbox",
                    "default": 0
                },
                "controls": {
                    "title": "Controls",
                    "type": "boolean",
                    "description": "Indicates whether the video player controls are displayed",
                    "format": "checkbox",
                    "default": 1
                },
                "fs": {
                    "title": "Disable fullscreen",
                    "type": "boolean",
                    "description": "Prevents the fullscreen button from displaying in the player.",
                    "format": "checkbox",
                    "default": 1
                },
                "rel": {
                    "title": "Show related videos",
                    "type": "boolean",
                    "description": "The player should show related videos when playback of the initial video ends. If this is off, related videos will come from the same channel as the video that was just played.",
                    "format": "checkbox",
                    "default": 1
                },
                "start": {
                    "title": "Start",
                    "type": "string",
                    "description": "Causes the player to begin playing the video at the given number of seconds from the start of the video."
                },
                "end": {
                    "title": "End",
                    "type": "string",
                    "description": "Specifies the time, measured in seconds from the start of the video, when the player should stop playing the video."
                },
                "loop": {
                    "title": "Loop",
                    "type": "boolean",
                    "description": "Causes the player to play the initial video again and again",
                    "format": "checkbox",
                    "default": true
                },
                "cc_load_policy": {
                    "title": "Closed captions to be shown by default",
                    "type": "boolean",
                    "description": "Even if the user has turned captions off. The default behavior is based on user preference.",
                    "format": "checkbox",
                    "default": false
                },
                "iv_load_policy": {
                    "title": "Video annotations",
                    "type": "string",
                    "format": "select",
                    "default": "1",
                    "options": {
                        "enum_titles": ["Display", "Hide"]
                    },
                    "enum": ["1", "3"]
                },
                "muted": {
                    "title": "Muted video",
                    "type": "boolean",
                    "description": "Set video to mute on load.",
                    "format": "checkbox",
                    "default": false
                },
                "quality": {
                    "title": "Quality",
                    "type": "string",
                    "format": "select",
                    "default": "auto",
                    "options": {
                        "enum_titles": ["auto"]
                    },
                    "enum": ["auto"]
                },
                "speed": {
                    "title": "Speed",
                    "type": "string",
                    "format": "select",
                    "default": "1",
                    "options": {
                        "enum_titles": ["1"]
                    },
                    "enum": ["1"]
                }
            }
        }
    },
    "if": {
        "properties": {
            "advanced_settings": {
                "const": true
            }
        }
    },
    "then": {
        "properties": {
            "settings": {
                "type": "object",
                "options": {
                    "containerAttributes": {
                        "class": "as-none-object"
                    },
                    "dependencies": {
                        "advanced_settings": true
                    }
                },
                "properties": {
                    "autoplay": {
