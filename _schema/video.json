                        "type": "string",
                        "format": "select",
                        "default": "auto",
                        "options": {
                            "enum_titles": ["auto"]
                        },
                        "enum": ["auto"]
                    },
                    "speed": {
                        "title": "Speed",
                        "type": "string",
                        "format": "select",
                        "default": "1",
                        "options": {
                            "enum_titles": ["1"]
                        },
                        "enum": ["1"]
                    }
                }
            }
        }
    }
}
